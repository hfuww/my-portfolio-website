<script>
    $(document).ready(function() {
        
        $("a[href^='#']").click(function(event) {
            event.preventDefault();  
            
            var target = $(this).attr("href");  
            
            
            $('html, body').animate({
                scrollTop: $(target).offset().top
            }, 1000);  
        });

        
        $(window).on('scroll', function() {
            $('.section').each(function() {
                var sectionOffset = $(this).offset().top;
                var windowHeight = $(window).scrollTop() + $(window).height();

                
                if (windowHeight > sectionOffset + 100) {
                    $(this).addClass('fade-in');  
                }
            });
        });


        
        $('.progress-bar').click(function() {
            var currentWidth = $(this).width();  
            
            
            if (currentWidth < $(this).parent().width()) {
                $(this).addClass('active');  
            } else {
                $(this).removeClass('active');  
            }
        });

        
        $(window).on('scroll', function() {
            $('.progress-bar').each(function() {
                var barOffset = $(this).offset().top;
                var windowHeight = $(window).scrollTop() + $(window).height();
                
                if (windowHeight > barOffset + 100) {  
                    $(this).addClass('active');
                }
            });
        });

        
        const listItems = document.querySelectorAll("ul");
        const preview1 = document.getElementById("priview");
        const preview2 = document.getElementById("priview2");
        const preview3 = document.getElementById("priview3");
        const preview4 = document.getElementById("priview4");

        
        function hidePreview() {
            preview1.style.display = 'none';
            preview1.style.opacity = 0;
            preview2.style.display = 'none';
            preview2.style.opacity = 0;
            preview3.style.display = 'none';
            preview3.style.opacity = 0;
            preview4.style.display = 'none';
            preview4.style.opacity = 0;
        }

        
        listItems.forEach(item => {
            item.addEventListener("mouseenter", () => {
                
                if (item.id === 'priview-ul') {
                    preview1.style.display = 'block';
                    preview1.style.opacity = 1;
                } else if (item.id === 'priview2-ul') {
                    preview2.style.display = 'block';
                    preview2.style.opacity = 1;
                }else if (item.id === 'priview3-ul') {
                    preview3.style.display = 'block';
                    preview3.style.opacity = 1;
                } else if (item.id === 'priview4-ul') {
                    preview4.style.display = 'block';
                    preview4.style.opacity = 1;
                }
            });

            item.addEventListener("mouseleave", () => {
                hidePreview(); 
            });

            item.addEventListener("click", () => {
                
                if (item.id === 'priview-ul') {
                    preview1.style.display = 'block';
                    preview1.style.opacity = 1;
                } else if (item.id === 'priview2-ul') {
                    preview2.style.display = 'block';
                    preview2.style.opacity = 1;
                }else if (item.id === 'priview3-ul') {
                    preview3.style.display = 'block';
                    preview3.style.opacity = 1;
                } else if (item.id === 'priview4-ul') {
                    preview4.style.display = 'block';
                    preview4.style.opacity = 1;
                }
            });
        });

        
        document.addEventListener('mousemove', (event) => {
            if (!event.target.closest('li') && !event.target.closest('#priview') && !event.target.closest('#priview2') && !event.target.closest('#priview3') && !event.target.closest('#priview4')) {
                hidePreview();
            }
        });

        const progressBars = document.querySelectorAll('.progress-bar');

        
        progressBars.forEach(bar => {
            
            bar.parentElement.addEventListener('mouseenter', function () {
                const value = bar.getAttribute('aria-valuenow');
                
                
                bar.style.width = '0%'; 
                setTimeout(() => {
                    bar.style.width = value + '%';  
                    bar.textContent = value + '%';  
                }, 100); 
            });

            
            bar.parentElement.addEventListener('mouseleave', function () {
                bar.style.width = '0%';  
                bar.textContent = '0%';  
            });
        });
    });
</script>
</body>
